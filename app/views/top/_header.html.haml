.header
  .header__upper
    .header__upper--leftbox
      = link_to root_path, class: "main_logo" do
        = image_tag "logo-mercari.svg", alt: "mercari", class: "mercari_logo"
    .header__upper--form
      = search_form_for @q ,url: top_search_path, method: :get do |f|
        .header__upper--form__input
          = f.search_field :name_or_description_cont_any ,placeholder: "何かお探しですか？"
        %button{type: "search",class: "header__upper--form__search"}
          %svg.header__upper--form__search
            %path{d: "M11.435 10.063h-.723l-.256-.247a5.92 5.92 0 0 0 1.437-3.87 5.946 5.946 0 1 0-5.947 5.947 5.92 5.92 0 0 0 3.87-1.437l.247.256v.723L14.637 16 16 14.637l-4.565-4.574zm-5.489 0A4.111 4.111 0 0 1 1.83 5.946 4.111 4.111 0 0 1 5.946 1.83a4.111 4.111 0 0 1 4.117 4.116 4.111 4.111 0 0 1-4.117 4.117z"}
  .header__lower
    .header__lower--leftbox
      .header__lower--leftbox__search
        = link_to "test", class: "header__lower--leftbox__search--box" do
          %svg.header__lower--leftbox__search--box__icon{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 20 16", :width => "20"}
            %path{d: "M18.799 15.25h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zm0-6h-11.5a1.25 1.25 0 1 1 0-2.5h11.5a1.25 1.25 0 0 1 0 2.5zM2 16a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0-6a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"}
          カテゴリーから探す
      .header__lower--leftbox__search
        = link_to "test", class: "header__lower--leftbox__search--box" do
          %svg.header__lower--leftbox__search--box__icon{"aria-hidden" => "true", :height => "16", :viewbox => "0 0 23 16", :width => "23"}
            %path{d: "M6.315 0L4.473 1.806 2.833.019.73 1.977l1.69 1.84L1.198 5.02c-1.594 1.594-1.594 4.188-.01 5.772L6.3 16h13.272a3.08 3.08 0 0 0 3.077-3.077V3.076A3.08 3.08 0 0 0 19.57 0H6.315zm13.46 12.925a.211.211 0 0 1-.205.205H7.504L3.227 8.771a1.226 1.226 0 0 1-.01-1.71L4.38 5.92l1.28 1.371a2.68 2.68 0 1 0 2.13-1.93L6.433 3.907 7.49 2.87h12.082a.211.211 0 0 1 .206.205v9.848h-.002z"}
          ブランドから探す
    .header__lower--rightbox
      - if user_signed_in?
        .header__lower--rightbox__mypage
          = link_to users_path, class: "header__lower--rightbox__mypage--btn" do
            マイページ
            -# ユーザーマイページのリンクを貼り付け
        .header__lower--rightbox__log_out
          = link_to destroy_user_session_path, method: :delete, class: "header__lower--rightbox__log_out--btn" do
            ログアウト
      - else
        .header__lower--rightbox__sign_up
          = link_to new_user_session_path, method: :get, class: "header__lower--rightbox__sign_up--btn" do
            新規会員登録
            -#ユーザー新規会員登録のリンクを貼り付け
        .header__lower--rightbox__log_in
          = link_to user_session_path, class: "header__lower--rightbox__log_in--btn" do
            ログイン